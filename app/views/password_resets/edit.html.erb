<%= form_for @account, :url => password_reset_path(params[:id]) do |f| %>
	<% if @account.errors.any? %>
	<div class="error_messages">
		<h2>Form is invalid</h2>
		<ul>
		<% for message in @account.errors.full_messages %>
			<li><%= message %></li>
		<% end %>
		</ul>
	</div>
	<% end %>

<div class="row">
<div class="form-control" id="form-control">
	<%= image_tag("icon_96px.png", :alt => "Connectionboard", :class => "logo") %>

	 <div class="row collapse form">
	 	<div class="small-12 medium-5 columns form">
			<%=f.text_field :password, class: 'form-control', autofocus: true, placeholder: 'New password'%>
		</div>
	</div>


	 <div class="row collapse">
	 	<div class="small-12 medium-5 columns">
		<%=f.text_field :password_confirmation, class: 'nej', autofocus: true, placeholder: 'Confirm'%>
		</div>
	</div>
	<div class="actions"><%= f.submit "Update Password" %></div>
</div>
<% end %>

